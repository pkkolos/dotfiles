super + c
    bspc node -c

super + shift + x
    bspc node -k

super + m
    bspc desktop -l next

super + {t,s,f}
    bspc node -t {tiled,floating,fullscreen}

alt + {_,shift + }{Tab,grave}
    bspc node -f {next,prev}{_,.local}

super + ctrl + {h,t,c,n,d}
    bspc node -p {west,south,north,east,cancel}

super + ctrl + {1-9}
    bspc node -o 0.{1-9}

super + ctrl + {g,r}
    bspc node -o 0.{33,66}

super + {_,alt + }{Left,Down,Up,Right}
    bspc node -{f,s} {west,south,north,east}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10}

super + alt + r: {h,t,c,n}
    bspc node -z {right -10 0, bottom 0 10, bottom 0 -10, right 10 0}

super + alt + r: shift + {h,t,c,n}
    bspc node -z {left -10 0, top 0 10, top 0 -10, left 10 0}

XF86AudioRaiseVolume
    pactl set-sink-volume 1 +5%

XF86AudioLowerVolume
    pactl set-sink-volume 1 -5%

XF86AudioMute
    pactl set-sink-mute 1 toggle

XF86AudioPlay
    mpc toggle

XF86AudioStop
    mpc stop

XF86AudioNext
    mpc next

XF86AudioPrev
    mpc prev

# start applications
ctrl + alt + t
    urxvt

super + d
    rofi -show drun -modi drun,run

# session management
super + l
    loginctl lock-session

super + shift + q
    rofi -show "Power menu" -modi "Power menu:rofi_power_menu"

# reload key config
super + Escape
    pkill -USR1 -x sxhkd
