[alias]
	a = add
	ap = add -p
	b = branch -vv
	c = commit
	ca = commit -a
	co = checkout
	d = diff
	ds = diff --staged
	dst = diff --stat
	dsts = diff --stat --staged
	f = fetch
	l = log --stat
	lg = log --graph --abbrev-commit --date=relative --all --pretty='format:%C(yellow)%h%Creset %C(bold blue)%an -%Cred%d%Creset %s %Cgreen(%cr)%Creset'
	lga = log --graph --abbrev-commit --date=relative --all --pretty='format:%C(yellow)%h%Creset %C(bold blue)%an -%Cred%d%Creset %s %Cgreen(%ar)%Creset'
	m = merge
	mm = merge --no-ff
	r = reset
	rh = reset --hard
	rmt = remote
	rmu = remote update --prune
	s = status --short --branch
	st = stash
	stl = stash list
	stp = stash pop
	t = tag
	wd = diff --word-diff
	wds = diff --word-diff --staged
[color]
	ui = true
[color "diff"]
	meta = magenta bold
[color "status"]
	untracked = blue
[core]
	editor = vim
	pager = less -FX
[diff]
	renames = copies
	mnemonicprefix = true
	algorithm = histogram
[push]
	default = simple
[status]
	submodulesummary = true
[tar "tar.xz"]
	command = xz -c
