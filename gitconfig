[alias]
	a = add
	ap = add -p
	b = branch
	ba = branch -a -vv
	c = commit
	ca = commit --amend
	co = checkout
	d = diff
	ds = diff --staged
	dst = diff --stat
	dsts = diff --stat --staged
	dt = difftool
	f = fetch
	l = log --stat
	lg = log --graph --relative-date --pretty=graph
	lga = log --graph --relative-date --all --pretty=graph
	m = merge
	mm = merge --no-ff
	mt = mergetool
	r = reset
	rh = reset --hard
	rb = rebase
	rbi = rebase -i
	rba = rebase --abort
	rbc = rebase --continue
	rbs = rebase --skip
	rmt = remote
	rmu = remote update --prune
	s = status --short
	st = stash
	stl = stash list
	stp = stash pop
	t = tag
	wd = diff --word-diff
	wds = diff --word-diff --staged
[color]
	ui = true
[color "diff"]
	meta = magenta bold
[color "status"]
	untracked = blue
[core]
	editor = vim
	pager = less -FX
[diff]
	tool = vimdiff
	guitool = meld
	renames = copies
	mnemonicprefix = true
	algorithm = histogram
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	keepBackup = false
[mergetool "meld"]
	hasOutput = true
[pretty]
	graph = format:%C(auto,yellow)%h %C(auto,blue bold)%aN -%C(auto,red)%d%Creset %s %C(auto,green)(%cd)%Creset
[push]
	default = simple
[status]
	submodulesummary = true
	branch = true
[tar "tar.xz"]
	command = xz -c
