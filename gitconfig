[alias]
	a = add
	ap = add -p
	b = branch
	ba = branch -a -vv
	c = commit
	ca = commit --amend
	co = checkout
	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	d = diff
	ds = diff --staged
	dst = diff --stat
	dsts = diff --stat --staged
	dt = difftool
	f = fetch
	l = log --stat
	lg = log --graph --relative-date --pretty=graph
	lga = log --graph --relative-date --all --pretty=graph
	m = merge
	mm = merge --no-ff
	ma = merge --abort
	mt = mergetool
	p = push
	r = reset
	rh = reset --hard
	rb = rebase
	rbi = rebase -i
	rba = rebase --abort
	rbc = rebase --continue
	rbs = rebase --skip
	rmt = remote
	rmu = remote update --prune
	s = status --short
	sm = submodule
	st = stash
	stl = stash list
	stp = stash pop
	t = tag
[annex]
	dotfiles = true
	gitaddtoannex = false
[color]
	ui = auto
[color "diff"]
	frag = blue
	func = magenta
	meta = yellow bold
[color "interactive"]
	prompt = 13 bold
[color "status"]
	untracked = blue
[column]
	ui = auto
[commit]
	verbose = true
[core]
	editor = nvim
[diff]
	algorithm = histogram
	colorMoved = plain
	guitool = meld
	mnemonicPrefix = true
	renames = true
	tool = vimdiff
[filter "mail"]
	clean = sed \"s/pkkolos@/\\$username\\$@/g\"
	smudge = sed \"s/\\\\\\$username\\\\\\$/pkkolos/g\"
[help]
	autocorrect = prompt
[merge]
	conflictstyle = zdiff3
	tool = vimdiff
[mergetool]
	keepBackup = false
[mergetool "meld"]
	hasOutput = true
[pager]
	log = less -FX
[pretty]
	graph = format:%C(auto,yellow)%h %C(auto,blue bold)%aN -%C(auto,red)%d%Creset %s %C(auto,green)(%cd)%Creset
[push]
	default = simple
[stash]
	showPatch = true
[status]
	branch = true
