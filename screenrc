term screen-256color
startup_message off
autodetach on

vbell off
msgwait 10
activity "activity in %n (%t) [%c]"

# Use the scrollbar of xterm
termcapinfo xterm* ti@:te@
# Don't leave residual editor text
altscreen on

caption always '%L=%{= Gw}%?%-Lw%?%45L>%{r}[%{+b g}%n*%f %{b}%t%{-b r}]%{w}%?%+Lw%?%-19= [%{+b y}%Y-%m-%d %0c%{-b w}]'
hardstatus alwayslastline '%{= kw}[%{+b y}%H%{-b w}] %{g}%n %f %{b}%t%? %{+b r}(%{-b w}%u%{+b r})%{-b w}%?%-19= %{w}[ %{+b r}%l%{-b w} ]'
