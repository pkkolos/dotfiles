# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    color_good = "#00af00"
    color_degraded = "#d7d700"
    color_bad = "#af0000"
    interval = 5
}

#order += "ipv6"
order += "volume master"
order += "cpu_usage"
order += "disk /"
order += "disk /home"
#order += "run_watch VPN"
order += "wireless wlan0"
#order += "ethernet eth0"
order += "battery 1"
order += "tztime local"

wireless wlan0 {
    format_up = "W: %essid-%quality, %ip"
    format_down = "W: down"
}

ethernet eth0 {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

battery 1 {
    integer_battery_capacity = true
    format = "%status %percentage %remaining"
    low_threshold = 30
    threshold_type = time
}

run_watch VPN {
    pidfile = "/var/run/vpnc/pid"
}

tztime local {
    format = "%H:%M %d/%m/%Y"
}

cpu_usage {
    format = "%usage"
}

disk "/" {
    format = "/ %avail"
}

disk "/home" {
    format = "/home %avail"
}

volume master {
    format = "♪: %volume"
    device = "default"
    mixer = "Master"
    #mixer_idx = 0
}
