# i3status configuration file

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    color_good = "#00af00"
    color_degraded = "#d7d700"
    color_bad = "#af0000"
    interval = 5
}

order += "volume master"
order += "ethernet eth0"
order += "wireless wlan0"
order += "disk /"
order += "disk /home"
order += "cpu_usage"
order += "battery 1"
order += "time"

wireless wlan0 {
    format_up = "%essid-%quality %ip"
    format_down = "!W"
}

ethernet eth0 {
    format_up = "%ip"
    format_down = "!E"
}

battery 1 {
    integer_battery_capacity = true
    format = "%status %percentage %remaining"
    low_threshold = 30
    threshold_type = time
}

time {
    format = "%H:%M %d/%m/%Y"
}

cpu_usage {
    format = "%usage"
}

disk "/" {
    format = "/ %avail"
}

disk "/home" {
    format = "/home %avail"
}

volume master {
    format = "♪: %volume"
    device = "default"
    mixer = "Master"
}
