[colours]
bg = #191b21
fg = #e7e8eb
empty_fg = #454c5c
active_bg = #2f343f
active_ul = #1f62b0
urgent_bg = #ae110c
status_l = #d3dae3
status_d = #5c616c


[bar/panel]
monitor = ${env:MONITOR:eDP-1}
dock = true

width = 100%
height = 32
offset-x = 0
offset-y = 0

background = ${colours.bg}
foreground = ${colours.fg}

spacing = 1
padding-left = 0
padding-right = 1
module-margin-left = 0
module-margin-right = 0

underline-size = 2

font-0 = NotoMono:size=10;0
font-1 = FontAwesome:size=10;0

modules-left = bspwm mpd
modules-center =
modules-right = xwindow wlan volume battery date clock powermenu

tray-position = right
tray-padding = 0

wm-restack = bspwm


[module/bspwm]
type = internal/bspwm

ws-icon-0 = home;
ws-icon-1 = terminal;
ws-icon-2 = code;
ws-icon-3 = browser;
ws-icon-4 = files;
ws-icon-5 = videos;
ws-icon-6 = other;
ws-icon-7 = mail;
ws-icon-8 = chat;
ws-icon-9 = music;
ws-icon-default = 

format = <label-monitor> <label-state>
format-margin = 1

label-monitor = %name%
label-monitor-foreground = ${colours.bg}
label-monitor-background = ${colours.active_ul}
label-monitor-padding = 1

label-active = %icon%
label-active-background = ${colours.active_bg}
label-active-underline = ${colours.active_ul}
label-active-padding = 1

label-occupied = %icon%
label-occupied-padding = 1

label-urgent = %icon%
label-urgent-background = ${colours.urgent_bg}
label-urgent-padding = 1

label-empty = %icon%
label-empty-foreground = ${colours.empty_fg}
label-empty-padding = 1


[module/mpd]
type = internal/mpd

format-online = <icon-prev> <icon-stop> <toggle> <icon-next> <label-song>
format-online-background = ${colours.active_bg}
format-online-padding = 1

format-offline-background = ${colours.active_bg}
format-offline-padding = 1

label-song-maxlen = 50

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 


[module/xwindow]
type = internal/xwindow

format-foreground = ${colours.status_l}
format-margin = 2

label = %title%
label-maxlen = 50


[module/wlan]
type = internal/network
interface = wlp3s0
interval = 10

format-connected = <label-connected>
format-connected-margin = 1

format-disconnected-margin = 1

label-connected = %{F#5c616c} %{F#d3dae3}%essid%

label-disconnected = 
label-disconnected-foreground = ${colours.status_d}


[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
format-volume-margin = 1

format-muted-margin = 1

label-volume = %percentage%
label-volume-foreground = ${colours.status_l}

label-muted = 
label-muted-foreground = ${colours.status_d}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${colours.status_d}


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
poll-interval = 30

format-charging = <ramp-capacity> <label-charging>
format-charging-padding = 1

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-padding = 1

format-full = <ramp-capacity> <label-full>
format-full-padding = 1

label-charging-foreground = ${colours.status_l}
label-discharging-foreground = ${colours.status_l}
label-full-foreground = ${colours.status_l}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colours.status_d}


[module/date]
type = internal/date
interval = 5

format-margin = 1

date = %%{F#5c616c} %%{F#d3dae3}%a, %b %d


[module/clock]
type = internal/date
interval = 5

format-margin = 1

date = %%{F#5c616c} %%{F#d3dae3}%R %Z


[module/powermenu]
type = custom/menu

label-open = 
label-open-foreground = ${colours.urgent_bg}

label-close =  cancel
label-close-foreground = ${colours.urgent_bg}

label-separator = |
label-separator-foreground = ${colours.status_d}

menu-0-0 = logout
menu-0-0-exec = loginctl terminate-session $XDG_SESSION_ID
menu-0-1 = suspend
menu-0-1-exec = systemctl suspend
menu-0-2 = reboot
menu-0-2-exec = systemctl reboot
menu-0-3 = power off
menu-0-3-exec = systemctl poweroff

; vim:ft=dosini
