#!/bin/bash

wid=$1
class=$2
instance=$3

title="$(xprop -id "$wid" _NET_WM_NAME | cut -d' ' -f 3- | tr -d '"')"

if [[ "$class" == "Firefox" && "$title" == "About Mozilla Firefox" ]]; then
    echo "state = floating"
elif [[ "$class" == "jetbrains-idea"* && "$title" == "win0" ]]; then
    echo "state = floating"
elif [[ "$class" == "Minecraft"* || "$title" == "Mindustry" ]]; then
    echo "desktop = other"
fi
